{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": ["src/","config/"],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "declaration": false,
    "outDir": "dist/",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
}